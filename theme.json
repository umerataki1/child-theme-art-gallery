{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "slug": "base",
          "color": "#f7f7f7",
          "name": "Base"
        },
        {
          "slug": "contrast",
          "color": "#9d9d9d",
          "name": "Contrast"
        },
        {
          "slug": "primary",
          "color": "#222222",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#ff7062",
          "name": "Secondary"
        },
        {
          "slug": "transparent",
          "color": "transparent",
          "name": "Transparent"
        },
        {
          "slug": "ButtonBG",
          "color": "#575757",
          "name": "ButtonBG"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "white"
        },
        {
          "slug": "headertext",
          "color": "#757575",
          "name": "white"
        }
      ]
    },
    "layout": {
      "contentSize": "1150px",
      "wideSize": "1633px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingScale": {
        "steps": 7
      },
      "spacingSizes": [
        {
          "size": "0.44rem",
          "slug": "20",
          "name": "2"
        },
        {
          "size": "0.67rem",
          "slug": "30",
          "name": "3"
        },
        {
          "size": "1rem",
          "slug": "40",
          "name": "4"
        },
        {
          "size": "1.5rem",
          "slug": "50",
          "name": "5"
        },
        {
          "size": "2.25rem",
          "slug": "60",
          "name": "6"
        },
        {
          "size": "clamp(2.25rem, 10vw, 3.38rem)",
          "slug": "70",
          "name": "7"
        },
        {
          "size": "clamp(3.38rem, 10vw, 5.06rem)",
          "slug": "80",
          "name": "8"
        }
      ]
    },
    "typography": {
      "dropCap": false,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "'Montserrat', sans-serif",
          "slug": "heading-font",
          "name": "Heading Font",
          "fontFace": [
            {
              "fontFamily": "'Montserrat'",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "fontDisplay": "swap",
              "fontWeight": "bold",
              "src": ["file:./assets/fonts/Montserrat-Bold.woff"]
            }
          ]
        },
        {
          "fontFamily": "'Mulish', sans-serif",
          "slug": "body-font",
          "name": "Body Font",
          "fontFace": [
            {
              "fontFamily": "'Mulish'",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "fontDisplay": "swap",
              "fontWeight": "normal",
              "src": ["file:./assets/fonts/Mulish-Regular.woff"]
            }
          ]
        },
        {
          "fontFamily": "'Nova Flat', sans-serif",
          "slug": "background-font",
          "name": "Background Font",
          "fontFace": [
            {
              "fontFamily": "'Nova Flat'",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "fontDisplay": "swap",
              "fontWeight": "normal",
              "src": ["file:./assets/fonts/NovaFlat-Regular.woff"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "extra-small",
          "size": ".9rem",
          "name": "Extra small",
          "fluid": false,
          "lineHeight": "1.3"
        },
        {
          "slug": "small",
          "size": "1.1rem",
          "name": "Small",
          "fluid": false,
          "lineHeight": "1.3"
        },
        {
          "slug": "medium",
          "size": "1.2rem",
          "name": "Medium",
          "fluid": {
            "min": "1.25rem",
            "max": "1.5rem"
          },
          "lineHeight": "1.4"
        },
        {
          "slug": "large",
          "size": "2rem",
          "name": "Large",
          "fluid": {
            "min": "1.75rem",
            "max": "2rem"
          },
          "lineHeight": "1.4"
        },
        {
          "slug": "x-large",
          "size": "2.75rem",
          "name": "XL",
          "fluid": {
            "min": "2.5rem",
            "max": "2.75rem"
          },
          "lineHeight": "1.4"
        },
        {
          "slug": "xx-large",
          "size": "3.75rem",
          "name": "XXL",
          "fluid": {
            "min": "3rem",
            "max": "3.75rem"
          },
          "lineHeight": "1.5"
        },
        {
          "slug": "xxx-large",
          "size": "6rem",
          "name": "XXL",
          "fluid": {
            "min": "3rem",
            "max": "3.75rem"
          },
          "lineHeight": "1.5"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "blocks": {
      "core/comment-author-name": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/comment-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/comment-edit-link": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/comment-reply-link": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/details": {
        "color": {
          "text": "var(--wp--preset--color--base)",
          "background": "var(--wp--preset--color--white)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--30)",
            "right": "var(--wp--preset--spacing--30)",
            "bottom": "var(--wp--preset--spacing--30)",
            "left": "var(--wp--preset--spacing--30)"
          }
        }
      },
      "core/footnotes": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--secondary)"
            }
          }
        }
      },
      "core/latest-comments": {
        "spacing": {
          "padding": {
            "left": "0px"
          }
        }
      },
      "core/navigation": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "underline"
            },
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            }
          }
        }
      },
      "core/page-list": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "underline"
            },
            ":hover": {
              "typography": {
                "textDecoration": "none"
              }
            }
          }
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--secondary)"
        }
      },
      "core/post-author-name": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--secondary)"
            }
          }
        }
      },
      "core/post-content": {
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--60)",
            "bottom": "var(--wp--preset--spacing--60)"
          }
        }
      },
      "core/post-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--secondary)"
            }
          }
        }
      },
      "core/post-navigation-link": {
        "typography": {
          "fontWeight": "700"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        },
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--secondary)"
            }
          }
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "core/query-pagination": {
        "typography": {
          "fontWeight": "700"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--60)",
            "bottom": "var(--wp--preset--spacing--60)"
          }
        }
      },
      "core/query-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "core/search": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "woocommerce/product-categories": {
        "css": "& ul{list-style:none;} & ul:first-child{padding-left:0;}"
      },
      "woocommerce/product-price": {
        "color": {
          "text": "var(--wp--preset--color--contrast)"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--contrast)"
            }
          }
        }
      },
      "woocommerce/filter-wrapper": {
        "elements": {
          "heading": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--medium)",
              "fontWeight": "400"
            }
          }
        }
      },
      "yoast/faq-block": {
        "css": "& .schema-faq-section { background: var(--wp--preset--color--secondary); color: var(--wp--preset--color--base); padding: 8px 4px 8px 32px; margin: 4px 0;} & .schema-faq-answer{line-height: inherit; margin: 0;}"
      }
    },
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "css": ".sidebar{ background: var(--wp--preset--color--primary); border-radius: 4px;}",
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading-font)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading-font)"
        },
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "1rem"
          }
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading-font)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading-font)"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading-font)"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading-font)"
        }
      },
      "p": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--body-font)"
        }
      },

      "background": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--background-font)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--font-family--body-font)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--font-family--body-font)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--preset--font-family--body-font)"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--preset--font-family--body-font)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--button-bg)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "400"
        },

        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--secondary)"
          },
          "border": {
            "color": "var(--wp--preset--color--white)"
          }
        }
      }
    },
    "typography": {
      "fontSize": "var(--wp--preset--font-size--small)",
      "fontFamily": "var(--wp--preset--font-family--body-font)",
      "lineHeight": "1.7"
    },
    "spacing": {
      "blockGap": "1.7rem",
      "padding": {
        "top": "var(--wp--preset--spacing--60)",
        "right": "var(--wp--preset--spacing--60)",
        "bottom": "var(--wp--preset--spacing--60)",
        "left": "var(--wp--preset--spacing--60)"
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "narrow-header",
      "title": "Narrow header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "narrow-footer",
      "title": "Narrow footer",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "uncategorized"
    },
    {
      "name": "post-navigation",
      "title": "Post navigation",
      "area": "uncategorized"
    },
    {
      "name": "comments",
      "title": "Comments",
      "area": "uncategorized"
    }
  ],
  "customTemplates": [
    {
      "name": "no-title",
      "title": "No title",
      "postTypes": ["post", "page"]
    },
    {
      "name": "featured-image",
      "title": "Featured image in header",
      "postTypes": ["post", "page"]
    },
    {
      "name": "sidebar-page-template",
      "title": "Page with sidebar",
      "postTypes": ["page"]
    },
    {
      "name": "sidebar-post-template",
      "title": "Post with sidebar",
      "postTypes": ["post"]
    },
    {
      "name": "single-product",
      "title": "Single product"
    },
    {
      "name": "archive-product",
      "title": "Shop (Product archive)"
    }
  ]
}
